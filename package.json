    "test": "jest",
    "check": "pnpm exec biome check --write --unsafe && pnpm exec tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "exit-on-epipe": "^1.0.1",
    "moment": "^2.30.1",
    "tsx": "^4.20.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
